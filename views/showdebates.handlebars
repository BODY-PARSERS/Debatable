
<div class="explore-join-continue-page">

    <div class="explore-wrapper d-block">
        <div class="d-flex flex-wrap justify-content-start">
            {{#each debates}}
            <div class="card col-md-4 card-background-color {{../className}}-div" id="{{../className}}{{id}}-div">
                <h4 class="card-header poppins" style="color:darkgoldenrod;">{{topic}}</h4>
                <div class="card-body poppins">
                    <p class="card-text">Share your own perspectives with others.</p>
                    <button class="btn btn-info btn-lg btn-responsive {{../className}}-button" id="{{../className}}{{id}}" data-debateid={{id}} data-usersid={{debateusersId}}>
                        {{../pageName}} Debate
                    </button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</div> 
<div style="display:none" id="numberOfDebates" data-numberOfDebates={{numberofdebates}}></div>