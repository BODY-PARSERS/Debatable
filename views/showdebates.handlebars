
<div class="explore-join-continue-page">

    <div class="explore-wrapper d-block">
        <div class="d-flex flex-wrap justify-content-start">
            {{#each debates}}
            <div class="card col-md-3 card-background-color">
                <h5 class="card-header rock-salt">{{topic}}</h5>
                <div class="card-body poppins">
                    <p class="card-text">Share your own perspectives with others.</p>
                    <button class="btn btn-primary btn-lg btn-responsive {{../className}}-button" data-debateid={{id}}>
                        {{../pageName}} Debate
                    </button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

</div> 
