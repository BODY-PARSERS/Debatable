<div class="sign-up-box page-view col-md-6"style="background-color:black; color:whitesmoke; opacity:0.90; border-style:ridge; border-width:3px;">
    <h1 class="rock-salt">Sign Up</h1>
    <hr class="my-4">
    <form class="poppins" id="sign-up-form">
        <div class="form-group">
            <label for="name">Username</label>
            <input type="text" class="form-control" id="username-input" aria-describedby="emailHelp" placeholder="Enter username">
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="email-input" aria-describedby="emailHelp" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="password-input" placeholder="Enter Password">
        </div>
        <button type="submit" class="btn btn-info btn-lg btn-responsive">Submit</button>
    </form>
</div>
